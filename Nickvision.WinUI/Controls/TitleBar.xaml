<Grid
    x:Class="Nickvision.WinUI.Controls.TitleBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nickvision.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="Transparent" Height="32">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="{x:Bind LeftPaddingColumnWidth, Mode=TwoWay}"/>
        <ColumnDefinition/>
        <ColumnDefinition Width="{x:Bind RightPaddingColumnWidth, Mode=TwoWay}"/>
    </Grid.ColumnDefinitions>

    <Image Grid.Column="1" HorizontalAlignment="Left" Margin="8,0,0,0" Width="16" Height="16" Source="{x:Bind Icon, Mode=TwoWay}"/>

    <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="28,0,0,0" Style="{StaticResource CaptionTextBlockStyle}" Text="{x:Bind Title, Mode=TwoWay}"/>
</Grid>
